root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Matches multiple files with brace expansion notation

# 4 space indentation
[*.{rs}]
indent_style = space
indent_size = 4

# 2 space indentation
[*.{css,env,htm,html,js,jsx,json,jsonc,lua,md,mdx,sass,scss,sql,ts,tsx,toml,xml,yaml,yml}]
indent_style = space
indent_size = 2

# Tab indentation
[Makefile]
indent_style = tab
